// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  UserName String @db.VarChar(20)
  FirstName String @db.VarChar(50)
  LastName String @db.VarChar(50)
  Password String @db.VarChar(255)
  Email String @db.VarChar(100)
  Phone String? @db.VarChar(12)
  Height Int?
  Weight Int?
  Age Int?

  @@map("users")
}

model Coaches {
  id Int @id @default(autoincrement())
  UserName String @db.VarChar(20)
  FirstName String @db.VarChar(50)
  LastName String @db.VarChar(50)
  Password String @db.VarChar(255)
  Email String @db.VarChar(100)
  Phone String? @db.VarChar(12)
  Height Int?
  Weight Int?
  Age Int?
  Work_Location_Id Int?
  Coach_Experience_Id Int @unique

  coachE CoachExperiences?

  @@map("coaches")
}

model CoachExperiences {
  id Int @id @default(autoincrement())
  Skill String @db.Text
  School String? @db.Text
  Experience String @db.Text

  coach Coaches @relation(fields: [id], references: [Coach_Experience_Id])

  @@map("coachE")
}

model Map {
  id Int @id @default(autoincrement())
  City String @db.VarChar(255)
  Name String @db.VarChar(255)
  Phone String @db.VarChar(12)
  Open String @db.Text
  Like Int
  coordinates Location @relation(fields: [coordinatesId], references: [id])
  coordinatesId Int

  @@map("map")
}

model Location {
  id Int @id @default(autoincrement())
  latitude Float
  longitude Float

  maps Map[]

  @@map("gym_location")
}

model Training {
  id Int @id @default(autoincrement())
  Name String @db.VarChar(255)
  Text String @db.Text
  Like Int?
  DisLike Int?

  @@map("training")
}

model Diet {
  Name String @id @db.VarChar(255)
  Type_id Int? @unique

  foods Food[]

  @@map("diet")
}

model Food {
  id Int @id @default(autoincrement())
  Name String @db.VarChar(255)
  Description String @db.Text

  diet Diet @relation(fields: [id], references: [Type_id])

  @@map("food")
}

model Admin {
  id Int @id @default(autoincrement())
  userName String @db.VarChar(255)
  Password String @db.VarChar(255)

  @@map("admin")
}